<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/1751128/pexels-photo-1751128.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
  <div class="banner-content">
    <h1>Sauveteurs Nautiques</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
  </div>
</div>

<div class="container">
  <div class="row">
    <% if @jobs != [] %>
      <h2 class="text-center">Offres d'emploies</h2>
      <% @jobs.sample(3).each do |job| %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to offer_path(job.id) do %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/5399/beach-sand-lifeguard.jpg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
              <div class="card-category">Emploi</div>
              <div class="card-description">
                <h2><%= job.job_name %></h2>
                <p><%= job.company.place %></p>
              </div>
              <div class="card-user"><%= job.company.name %></div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <% if @formations != [] %>
    <h2 class="text-center">Formations</h2>
      <% @formations.sample(3).each do |formation| %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to offer_path(formation.id) do %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/2687/sea-beach-sand-ocean.jpg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
              <div class="card-category">Formation</div>
              <div class="card-description">
                <h2><%= formation.formation_name %></h2>
                <p><%= formation.company.place %></p>
              </div>
              <div class="card-user"><%= formation.company.name %></div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="more text-center">
   <p><strong><%= link_to "Decouvrir plus d'offres", offers_path, class: 'btn btn-default' %></strong></p>
  </div>
</div>

